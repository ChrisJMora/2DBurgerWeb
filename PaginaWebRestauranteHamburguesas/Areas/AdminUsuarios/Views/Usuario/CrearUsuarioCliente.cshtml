@using PaginaWebRestauranteHamburguesas.ModelViews;
@using PaginaWebRestauranteHamburguesas.Areas.AdminUsuarios.ModelViews;

@model ModelViewMensaje<ModelViewGeneros>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PaginaWebRestauranteHamburguesas</title>
    <link href="css/bootstrap.css" rel="stylesheet"/>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 0;
            background-color: beige;
        }

        h1 {
            border: 1px solid #ddd;
            padding: 10px;
            width: 400px;
            text-align: center;
        }

        form {
            max-width: 400px;
            width: 100%;
            padding: 20px;
            border: 3px solid #ccc;
            border-radius: 8px;
            margin-top: 20px;
        }

            form div {
                margin-bottom: 20px;
            }

        input, select, button, #txtFnacimiento {
            width: 100%;
            padding: 8px;
            margin: 5px 0;
            box-sizing: border-box;
        }

        #formDatosCliente, #formCredencialesAdmin, #formCredencialesUsuarioNuevo {
            margin-top: 20px;
        }

        button {
            background-color: forestgreen;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        a.button {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
</head>
<body>

    <h1>Crear Cuenta de Cliente</h1>

    <form method="post">

        <div id="formCredencialesAdmin">
            <label for="formCredencialesAdmin">Ingrese las credenciales de una cuenta de cliente válida:</label>
            <div>
                <input type="text" id="txtNombreUsuarioAdmin" placeholder="Nombre de usuario"
                       name="nombreUsuarioAdmin">
                <label for="txtNombreUsuarioAdmin">Usuario*</label>
            </div>
            <div>
                <input type="password" id="txtPasswordAdmin" placeholder="Contraseña"
                       name="passwordAdmin">
                <label for="txtPasswordAdmin">Contraseña*</label>
            </div>
        </div>

        <div id="formDatosCliente">
            <label for="formDatosCliente">Ingrese los datos del cliente:</label>
            <div>
                <input type="text" id="txtNombreCliente" placeholder="Nombre"
                       name="nombreCliente">
                <label for="txtNombreCliente">Nombre*</label>
            </div>
            <div>
                <input type="text" id="txtApellidoCliente" placeholder="Apellido"
                       name="apellidoCliente">
                <label for="txtApellidoCliente">Apellido*</label>
            </div>
            <div>
                <input type="date" id="txtFnacimiento" placeholder="Fecha de Nacimiento"
                       name="fNacimientoCliente">
                <label for="txtFnacimiento">Fecha de nacimiento*</label>
            </div>
            <div>
                <select name="generoCliente">
                    @foreach (var genero in Model.entity.Generos)
                    {
                        <option value="@genero.Id">@genero.Etiqueta</option>
                    }
                </select>
                <label for="generoCliente">Género</label>
            </div>
            <div>
                <input type="text" id="txtTelefono" placeholder="Teléfono"
                       name="telefono">
                <label for="txtTelefono">Teléfono*</label>
            </div>
            <div>
                <input type="email" id="txtMai" placeholder="Mail"
                       name="mail">
                <label for="txtMail">Mail*</label>
            </div>
        </div>

        <div id="formCredencialesUsuarioNuevo">
            <label for="formCredencialesUsuarioNuevo">Ingrese las credenciales de la nueva cuenta de cliente:</label>
            <div>
                <input type="text" id="txtNombreUsuario" placeholder="Nombre de Usuario"
                       name="nombreUsuario">
                <label for="txtNombreUsuario">Usuario*</label>
            </div>
            <div>
                <input type="password" id="txtPassword" placeholder="Contraseña"
                       name="password">
                <label for="txtPassword">Contraseña*</label>
            </div>
        </div>

        <button type="submit" >Crear cuenta</button>

    </form>

    <a asp-route="usuarios" class="button">Regresar</a>

    @if (Model is null)
    {
        @("Hola, bienvenido/a.")
    }
    else
    {
        @(Model.mensaje)
    }

</body>
</html>
