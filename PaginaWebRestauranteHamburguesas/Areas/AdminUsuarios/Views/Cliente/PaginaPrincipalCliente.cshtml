@using PaginaWebRestauranteHamburguesas.Areas.AdminUsuarios.ModelViews;

@model ModelViewClientes

<div class="d-flex justify-content-center mb-2">
    <h1>Administración de clientes</h1>
</div>


<div class="d-flex justify-content-center">

    <div class="w-75">
        <table class="table table-hover">
            <tr class="table-success">
                <th>Nombre y Apellido</th>
                <th>Fecha de Nacimiento</th>
                <th>Género</th>
                <th>Contacto</th>
                <th class="acciones">Visualizar</th>
            </tr>
            @foreach (var cliente in Model.Clientes)
            {
                <tr>
                    <td>@cliente.Nombre @cliente.Apellido</td>
                    <td>@cliente.FechaNacimiento</td>
                    <td>@cliente.Genero</td>
                    <td>
                        <ul class="list-group">
                            <li class="list-group-item">@cliente.Mail</li>
                            <li class="list-group-item">@cliente.Telefono</li>
                        </ul>
                    </td>
                    @if (cliente.TieneOrdenes)
                    {
                        <td class="acciones">
                            <a class="btn btn-success btn-sm h-100"
                               asp-route="ordenes"
                               asp-route-idCliente="@cliente.ClienteId">
                               Ordenes
                            </a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <p class="text-primary fw-bolder m-0">Sin ordenes</p>
                        </td>
                    }
                </tr>
            }
        </table>
    </div>

</div>

