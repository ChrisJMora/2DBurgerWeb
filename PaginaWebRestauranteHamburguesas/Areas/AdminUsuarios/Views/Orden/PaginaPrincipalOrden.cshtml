@using PaginaWebRestauranteHamburguesas.Areas.AdminUsuarios.ModelViews;

@model ModelViewCliente

<div class="d-flex flex-column align-items-center mb-2">
    <h1>Ordenes del cliente</h1>
    <h4 class="mb-3">Usuario: @Model.Nombre @Model.Apellido</h4>
</div>

<div class="d-flex justify-content-center">

    <div class="w-25">
        <table class="table table-hover">
            <tr class="table-success">
                <th>ID</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th class="acciones">Visualizar</th>
            </tr>
            @foreach (var orden in Model.OrdenesCliente.Ordenes)
            {
                <tr class="table-secondary">
                    <td>@orden.OrdenId</td>
                    <td>@orden.Fecha</td>
                    <td>@orden.Hora</td>
                    <td>
                        <a class="btn btn-success btn-sm d-flex justify-content-center"
                           asp-action="DetallesOrden"
                           asp-route-idOrden="@orden.OrdenId"
                           asp-route-idCliente="@orden.ClienteId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill align-self-center" viewBox="0 0 16 16">
                                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>

</div>

