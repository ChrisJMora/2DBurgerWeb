@using PaginaWebRestauranteHamburguesas.Areas.AdminProductos.ModelViews;
@using PaginaWebRestauranteHamburguesas.ModelViews;

@model ModelViewComboComida

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PaginaWebRestauranteHamburguesas</title>
    <link href="css/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background-color: #FFB993;
            margin: 0;
        }

        h1, p {
            border: 1px solid #ddd;
            width: 400px;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: aquamarine;
        }

        td {
            background-color: lightgray;
        }

        a.button {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
</head>
<body>

    <h1>Detalles combo</h1>

    <p>Nombre: @Model.MvCombo.Nombre</p>
    <p>Descripción: @Model.MvCombo.Descripcion</p>
    <p>Categoría: @Model.MvCombo.Categoria</p>
    <p>Precio: @Model.MvCombo.Descuento %</p>
    <p>Estado: @Model.MvCombo.Estado</p>

    <table>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Categoria</th>
            <th>Cantidad</th>
        </tr>
        @foreach (var comida in Model.MvComidasCombo.Comidas)
        {
            <tr>
                <td>@comida.Nombre</td>
                <td>@comida.Precio</td>
                <td>@comida.Categoria</td>
                <td>@Model.ComidasCombo[comida.ComidaId]</td>
            </tr>
        }
    </table>

    <a asp-action="PaginaPrincipalCombo" class="button">Regresar</a>

</body>
</html>
