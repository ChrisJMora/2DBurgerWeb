<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurante de Hamburguesas</title>
    <link href="css/bootstrap.css" rel="stylesheet" />

    <style>

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }

        li {
            float: left;
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                /* Change the link color to #111 (black) on hover */
                li a:hover {
                    background-color: #111;
                }

    </style>


</head>
<body>
    <header>
        <nav>
            <ul class="nav mb-2">
                <li class="nav-item mr-2"> <a class="btn btn-primary" asp-area="AccesoAdmin" asp-controller="Admin" asp-action="PaginaPrincipal" style="margin-right: 10px;">Inicio</a> </li>
                <li class="nav-item mr-2"> <a class="btn btn-secondary" asp-controller="Comida" asp-action="PaginaPrincipalComida" style="margin-right: 10px;">Comidas</a> </li>
                <li> <a asp-controller="Combo" asp-action="PaginaPrincipalCombo">Combos</a> </li>
            </ul>
            <ul class="nav">
                <li class="nav-item mr-2"> <span class="btn btn-info" style="margin-right: 10px;">@Sesion.Singleton().UsuarioLogeado</span> </li>
                <li class="nav-item mr-2"> <a class="btn btn-danger" asp-area="AccesoAdmin" asp-controller="Admin" asp-action="InicioSesion">Cerrar Sesión</a> </li>
            </ul>
        </nav>
    </header>

    <div class="centrar-todo">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Restaurante de Hamburguesas - <a asp-area="" asp-controller="Home" asp-action="Privacidad">Privacy</a>
        </div>
    </footer>

</body>
</html>
